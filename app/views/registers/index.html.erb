<div class="container">
  <p id="notice"><%= notice %></p>

  <h1 class="text-center">Developers</h1>

  <table class="table">
    <thead>
      <tr> 
        <% if @registers.exists? %>
          <th>Name</th>
          <th>Lastname</th>
          <th>Role</th>
          <th colspan="3"></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% @registers.each do |register| %>
        <tr>
          <td><%= register.name %></td>
          <td><%= register.lastname %></td>
          <td><%= register.role %></td>
          <td><%= link_to 'Change', edit_register_path(register) %></td>
          <td><%= link_to 'Delete', register, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Register', new_register_path %>
</div>